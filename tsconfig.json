{
  "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "lib": ["esnext"],
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "resolveJsonModule": true,
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
  },
  "include": ["src/**/*.ts"],
}